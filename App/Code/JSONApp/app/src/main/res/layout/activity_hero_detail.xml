<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/origen_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Origen:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/origen_mitologico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/descripcion_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/poderes_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Poderes:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/poder_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/poder_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/efectos_especiales_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Efectos Especiales:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/efectos_especiales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal" />

</LinearLayout>
